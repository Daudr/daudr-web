{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "prod",
      "rewrites": [
        {
          "source": "**",
          "function": "app"
        }
      ],
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "test",
      "rewrites": [
        {
          "source": "**",
          "function": "app"
        }
      ],
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ]
}
